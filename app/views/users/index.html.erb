<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <% if user.disabled? %>
      <td>User disabled.</td>
      <td>Reason:</td>
      <td><%= user.disabled_reason %></td>
    <% else %>
      <td><%= link_to 'Show', user %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Delete', user_remove_path(user) %></td>
    <% end %>
  </tr>
<% end %>
</table>

